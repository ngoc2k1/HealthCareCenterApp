<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        style="@style/roboto_bold_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_40_dp"
        android:text="Nhắn tin tư vấn" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="4dp">

        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="none"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <EditText
            android:id="@+id/edit_msg"
            style="@style/roboto_regular_14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16_dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_form"
            android:hint="Nhập tin nhắn..."
            android:padding="8dp"
            android:layout_marginEnd="@dimen/margin_10_dp"
            tools:ignore="TextFields" />

        <Button
            android:id="@+id/btnSend"
            style="@style/roboto_bold_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16_dp"
            android:padding="8dp"
            android:text="Gửi"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>