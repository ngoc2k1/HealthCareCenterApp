<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_login"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40_dp"
            android:src="@drawable/ic_favourite_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_form_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16_dp"
            android:layout_marginTop="@dimen/margin_45_dp"
            android:orientation="vertical"
            android:background="@drawable/bg_border_form_authen"
            android:paddingHorizontal="23dp"
            android:paddingTop="28dp"
            android:paddingBottom="@dimen/margin_25_dp"
            app:layout_constraintTop_toBottomOf="@+id/logo_app"
            tools:layout_editor_absoluteX="13dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_edt_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40_dp"
                android:background="@drawable/bg_border_input_authen"
                android:hint="@string/authen_username_hint"
                android:padding="@dimen/margin_10_dp"
                app:layout_constraintTop_toBottomOf="@+id/logo_app" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_edt_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40_dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/bg_border_input_authen"
                android:hint="@string/login_password_hint"

                android:padding="@dimen/margin_10_dp"
                app:layout_constraintEnd_toEndOf="@+id/login_edt_username"
                app:layout_constraintStart_toStartOf="@+id/login_edt_username"
                app:layout_constraintTop_toBottomOf="@+id/login_edt_username" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/login_tv_forget_password"
                style="@style/roboto_regular_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                android:text="@string/str_forgot_and_change_password"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.5dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_login"
                    style="@style/roboto_bold_16dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40_dp"
                    android:layout_marginEnd="@dimen/margin_12_dp"
                    android:layout_toStartOf="@id/btn_finger"
                    android:background="@drawable/bg_border_button_authen"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:text="@string/btn_login_title"
                    android:textAllCaps="false"
                    android:textColor="#0957DF" />

                <ImageView
                    android:id="@+id/btn_finger"
                    android:layout_width="@dimen/content_padding_40_dp"
                    android:layout_height="@dimen/content_padding_40_dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_fingerprint_setting" />
            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/login_tv_register"
                style="@style/roboto_bold_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:text="@string/login_tv_register_title"
                android:textColor="@color/white" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_or_login_by"
            style="@style/roboto_bold_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="@string/str_choose_login"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_form_login" />

        <include
            android:id="@+id/social_login"
            layout="@layout/include_social_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_26_dp"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:layout_marginBottom="69dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_or_login_by" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>