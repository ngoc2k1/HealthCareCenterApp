<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_login"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/ll_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_38_dp"
        android:layout_marginStart="@dimen/margin_28_dp"
        android:layout_marginTop="@dimen/width_65dp"
        android:layout_marginEnd="@dimen/margin_24_dp">

        <TextView
            style="@style/roboto_bold_24dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_38_dp"
            android:text="HEALTH CARE CENTER"
            android:textColor="@color/white" />
    </RelativeLayout>

    <include
        android:id="@+id/bottom"
        layout="@layout/bottom_sheet_home" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
